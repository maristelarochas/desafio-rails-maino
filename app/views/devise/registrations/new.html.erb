<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Cadastro</h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div>
          <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700 py-2" %>
          <%= f.input_field :name,
                      required: true,
                      autofocus: true,
                      autocomplete: "name",
                      class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" %>
        </div>

        <div>
          <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 py-2" %>
          <%= f.input_field :email,
                      required: true,
                      autofocus: true,
                      autocomplete: "email",
                      class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" %>

        </div>

        <div>
          <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 py-2" %>
          <%= f.input_field :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      autocomplete: "new-password",
                      class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" %>

        </div>

        <div>
          <%= f.label :password_confirmation, "ConfirmaÃ§Ã£o de Senha", class: "block text-sm font-medium text-gray-700 py-2" %>
          <%= f.input_field :password_confirmation,
                      required: true,
                      autocomplete: "new-password",
                      class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" %>
        </div>

        <div class="form-actions flex justify-end space-x-4">
          <%= f.button :submit, "Cadastrar", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mt-10" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
