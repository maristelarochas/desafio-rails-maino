<%= form_with(model: movie, class: "space-y-6") do |form| %>
  <% if movie.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(movie.errors.count, "erro") %> encontrado:</h2>
      <ul class="list-disc list-inside">
        <% movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Título *", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2",
    placeholder: "Ex: Matrix" %>
  </div>

  <div>
    <%= form.label :synopsis, "Sinopse *", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :synopsis, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2",
    placeholder: "Ex: Em um futuro distópico..." %>
  </div>

  <div>
    <%= form.label :release_year, "Ano de Lançamento *", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :release_year,
      class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2",
      placeholder: "Ex: 1999",
      min: 1888,
      max: Time.current.year %>
  </div>

  <div>
    <%= form.label :duration, "Duração *", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :duration, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2",
    placeholder: "Ex: 120", min: 1 %>
  </div>

  <div>
    <%= form.label :director, "Diretor *", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :director, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2",
    placeholder: "Ex: Lana Wachowski" %>
  </div>

  <div>
    <%= form.label :category_ids, "Categorias", class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_check_boxes :category_ids, Category.ordered_by_name, :id, :name do |cb| %>
      <div class="flex items-center">
        <%= cb.check_box class: "h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
        <%= cb.label class: "ml-2 block text-sm text-gray-700" %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.label :poster, "Poster do Filme *", class: "block text-sm font-medium text-gray-700" %>
    <% if movie.poster.attached? %>
      <div class="mb-2">
        <%= image_tag movie.poster, class: "w-32 h-48 object-cover rounded" %>
      </div>
    <% end %>
    <%= form.file_field :poster, accept:"image/*", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <div class="flex justify-end space-x-4">
    <%= link_to "Cancelar", movies_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400" %>
    <%= form.submit "Salvar", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end%>
